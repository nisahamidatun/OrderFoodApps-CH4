<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_dialog_checkout"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="50dp"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/ic_img_succesfully"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_success"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textOrderSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_order_has_been_successfully"
            android:layout_marginTop="15dp"
            style="@style/parent"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ic_img_succesfully"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textOrderSuccess2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/you_have_just_back_home_click_on_the_button_below_to_go_to_home"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:textSize="12sp"
            android:textColor="@color/greyLight"
            app:layout_constraintTop_toBottomOf="@id/textOrderSuccess"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toBottomOf="@id/textOrderSuccess2"
            android:layout_marginTop="20dp"
            android:text="@string/back_to_home"
            android:textSize="12sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>